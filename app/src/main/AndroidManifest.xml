<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.retrofitmvvm2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RetrofitMVVM2">
        <activity android:name=".view.ProductCategoriesMainActivity"></activity>
        <activity android:name=".view.ProductsMainActivity" />
        <activity android:name=".view.CategoriesMainActivity" />
        <activity android:name=".view.TodosMainActivity" />
        <activity android:name=".TodosMainActivity" />
        <activity android:name=".view.CommentsMainActivity" />
        <activity android:name=".view.UsersMainActivity" />
        <activity android:name=".view.PostsMainActivity" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>